<%
/**
 * @var {function} __
 * @param {string}
 * @return {string}
 */
/**
 * @var {Array} champions
 */
%>

<div class="champions" id="champions">

  <div class="champions__search">
    <div class="input-group input-group-lg">
      <span class="input-group-addon" id="champion-search--pre"><%= __('champion') %></span>
      <input type="text" class="form-control champions__search-text" id="champion-search" aria-describedby="champion-search--pre">
    </div>
  </div>

  <% if (champions && Array.isArray(champions)) { %>

    <% champions.forEach(function(champion) {  %>

      <div class="col-md-3 col-xs-6 col-sm-4 col-lg-2 champion-block" data-name="<%= champion.name %>">
        <div class="champion-block__inner">
          <a href="#" onclick="return false;">
            <img class="champion-block__image" src="http://ddragon.leagueoflegends.com/cdn/7.2.1/img/champion/<%- champion.image %>"/>
            <p class="champion-block__name"><%= champion.name %></p>
          </a>
        </div>
      </div>

    <% }) %>

  <% } else {%>

    <%= __('there_no_champions') %>

  <% }%>

</div>

