<%
/**
 * @var {function} __
 * @param {string}
 * @return {string}
 */
/**
 * @var {Array} items
 */
%>

<div class="current" id="current">

  <div class="items__search">
    <div class="input-group input-group-lg">
      <span class="input-group-addon" id="item-search--pre"><%= __('item') %></span>
      <input type="text" class="form-control items__search-text" id="search" aria-describedby="item-search--pre">
    </div>
  </div>

  <% if (items && Array.isArray(items)) { %>

  <% items.forEach(function(item) {  %>

  <div class="col-md-3 col-xs-6 col-sm-4 col-lg-2 item-block" data-name="<%= item.name %>">
    <div class="item-block__inner">
      <a href="#" onclick="return false;">
        <img class="item-block__image" src="http://ddragon.leagueoflegends.com/cdn/7.2.1/img/item/<%- item.image %>"/>
        <p class="item-block__name"><%= item.name %></p>
      </a>
    </div>
  </div>

  <% }) %>

  <% } else {%>

  <%= __('there_no_items') %>

  <% }%>

</div>

