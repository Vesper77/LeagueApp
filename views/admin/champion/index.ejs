<%
/**
 * @member {Array} champions
 */
/**
 * @member {Router} Router
 */

%>

<div class="page-header">
  <h1>Персонажи</h1>
  <form action="<%= Router.getRoute('champion', 'fill', 'admin') %>" method="post">
    <button disabled type="submit" class="btn btn-primary right"> Загрузить персанажей заново</button>
  </form>
</div>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Имя</th>
      <th>Riot id</th>
      <th>Картинка</th>
    </tr>
  </thead>
  <tbody>
    <% champions.forEach(function(champion, index) { %>
      <tr>
        <td><%= champion.name %></td>
        <td><%= champion.riotId %></td>
        <td><a target="_blank" href="<%- Router.dataImage('champions/previews/' + champion.image) %>"><%= champion.image %></a></td>
      </tr>
    <% }) %>
  </tbody>
</table>
